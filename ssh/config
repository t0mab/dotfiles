# Set root as default user
User root

# From : http://interrobeng.com/2013/08/25/speed-up-git-5x-to-50x/
ControlMaster auto
ControlPath ~/.ssh/%r@%h:%p
ControlPersist yes

# But useless fot GitHub as the timeout is short
Host github.com
	ControlMaster no

# Allow completion on hostnames
HashKnownHosts no
