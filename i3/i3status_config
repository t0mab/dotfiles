general {
	interval = 10
	colors = true
	interval = 10
}

order += "volume master"
order += "disk /"
order += "path_exists VPN"
order += "tztime local"

disk "/" {
	format = "%free"
}

tztime local {
	format = "%d-%m %H:%M:%S"
}

path_exists VPN {
	path = "/proc/sys/net/ipv4/conf/tun0"
}

volume master {
	format = "♪: %volume"
	format_muted = "♪: muted (%volume)"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}
