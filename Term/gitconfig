[user]
	name = Fabien Engels
	email = fabien.engels@gmail.com

[core]
	autocrlf = false
	editor = vim

[color]
	ui = auto

[merge]
	tool = mymeld

[mergetool "mymeld"]
	cmd = meld $LOCAL $BASE $REMOTE $MERGED
[push]
	default = simple

[alias]
	incoming = !git fetch && git log --oneline ..@{u}
	outgoing = log @{u}..
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
