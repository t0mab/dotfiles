[user]
	name = Fabien Engels
	email = fabien.engels@gmail.com

[core]
	autocrlf = false
	editor = nvim

[color]
	ui = auto

[push]
	default = simple

[alias]
	incoming = !git fetch && git log --oneline ..@{u}
	outgoing = log @{u}..
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
	st = status
	l = pull
	p = push
	c = commit
	d = diff
	a = add
  wk = log --graph --pretty='format:%h %s %d %n%n%n%n'
  wk2 = log --graph --pretty='format:%h - %s%>|(80)%d%n%n%n' --line-prefix='    ' --all
